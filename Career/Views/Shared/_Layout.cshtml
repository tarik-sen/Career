<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Career</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Career.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

</head>
    <body class="d-flex flex-column min-vh-100">
        <!-- Header Start -->
        <header class="d-flex py-2 border-bottom">
            <div class="container">
                <div class="d-flex flex-wrap justify-content-center align-items-center">
                    <a class="d-flex align-items-center mb-2 mb-md-0" style="z-index: 1;" asp-controller="Home" asp-action="Privacy">
                        <object data="~/logo/logo-xsm-black.svg" type="image/svg+xml" style="width: 56px; height: 56px; fill: currentColor; z-index: 0;"></object>
                    </a>
                    <partial name="_NavPartial" />

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </header>

        <!-- Main Start -->
        <div id="main-body" class="d-flex flex-grow-1 career-secondary">
            @RenderBody()
        </div>

        <!-- Footer Start -->
        <footer class="d-flex py-3 border-top">
            <div class="container">
                <div class="d-flex flex-wrap justify-content-between align-items-center">
                    <p class="col-12 col-lg-4 mb-3 mb-lg-0 text-muted text-center">&copy; 2023 Career, Inc</p>

                    <div class="col-12 col-lg-4 mb-3 mb-lg-0 d-flex align-items-center justify-content-center">
                        <object data="~/logo/logo-xsm-black.svg" type="image/svg+xml" style="width: 64px; height: 64px; fill: currentColor;"></object>
                    </div>
                
                    <partial name="_FooterLinksPartial"/>
                </div>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/chroma-js/2.1.0/chroma.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
